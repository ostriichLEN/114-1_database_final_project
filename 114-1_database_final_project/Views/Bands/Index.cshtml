@model IEnumerable<_114_1_database_final_project.Models.Band>

@{
    ViewData["Title"] = "樂團列表";
}

<h1>樂團列表</h1>

<p>
    <a asp-action="Create" class="btn btn-success">建立新樂團</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="輸入樂團名稱搜尋..." value="@ViewData["CurrentFilter"]">
        <button type="submit" class="btn btn-primary">🔍 搜尋</button>
        <a asp-action="Index" class="btn btn-secondary">清空</a>
    </div>
</form>

<div class="card mb-4">
    <div class="card-header bg-light">
        <strong>進階搜尋：</strong> 查詢成團超過特定年份且人數足夠的樂團
    </div>
    <div class="card-body">
        <form asp-controller="Bands" asp-action="AdvancedSearch" method="get" class="row g-3 align-items-end">
            <div class="col-auto">
                <label class="form-label">至少成立幾年 (K):</label>
                <input type="number" name="years" class="form-control" placeholder="輸入年份..." />
            </div>
            <div class="col-auto">
                <label class="form-label">至少幾位團員 (N):</label>
                <input type="number" name="minMembers" class="form-control" placeholder="輸入人數..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">查詢</button>
                <a asp-action="Index" class="btn btn-secondary">重置/顯示全部</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th onclick="sortTable(0)" style="cursor: pointer; user-select: none;">
                樂團編號 <span class="text-muted small">↕</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BandName)
            </th>
            <th onclick="sortTable(2)" style="cursor: pointer; user-select: none;">
                @Html.DisplayNameFor(model => model.SinceYear) <span class="text-muted small">↕</span>
            </th>
            <th onclick="sortTable(3)" style="cursor: pointer; user-select: none;">
                成員數 <span class="text-muted small">↕</span>
            </th>
            <th>管理功能</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @item.BandId
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.BandName)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.SinceYear)
                    </td>
                    <td>
                    @item.Characters.Count 人
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BandId" class="btn btn-sm btn-warning">修改</a>
                        <a asp-action="Details" asp-route-id="@item.BandId" class="btn btn-sm btn-info">詳細</a>
                        <a asp-action="Delete" asp-route-id="@item.BandId" class="btn btn-sm btn-danger">刪除</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

@section Scripts {
        <script>
            function sortTable(n) {
                var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
                table = document.getElementById("myTable");
                switching = true;
                // 預設排序方向為 "asc" (從小到大)
                dir = "asc";

                while (switching) {
                    switching = false;
                    rows = table.rows;

                    // 迴圈遍歷所有表格列 (除了第一列標題)
                    for (i = 1; i < (rows.length - 1); i++) {
                        shouldSwitch = false;

                        // 取得要比較的兩個元素
                        x = rows[i].getElementsByTagName("TD")[n];
                        y = rows[i + 1].getElementsByTagName("TD")[n];

                        // 取得文字內容並移除空白
                        var xContent = x.innerHTML.trim();
                        var yContent = y.innerHTML.trim();

                        // 判斷資料類型進行比較
                        var xValue, yValue;

                        // 如果是 "編號" (0)、"年份" (2) 或 "成員數" (3)，轉成數字比較
                        // parseInt 會自動忽略 " 人" 這樣的後綴字，只抓前面的數字
                        if (n === 0 || n === 2 || n === 3) {
                            xValue = parseInt(xContent) || 0;
                            yValue = parseInt(yContent) || 0;
                        }
                        // 其他當作字串比較 (例如樂團名稱)
                        else {
                            xValue = xContent.toLowerCase();
                            yValue = yContent.toLowerCase();
                        }

                        // 根據方向進行比較
                        if (dir == "asc") {
                            if (xValue > yValue) {
                                shouldSwitch = true;
                                break;
                            }
                        } else if (dir == "desc") {
                            if (xValue < yValue) {
                                shouldSwitch = true;
                                break;
                            }
                        }
                    }

                    if (shouldSwitch) {
                        // 執行交換
                        rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                        switching = true;
                        switchcount++;
                    } else {
                        // 如果完成了一輪且沒有發生任何交換，且目前是 "asc"，則改為 "desc" 再跑一次
                        if (switchcount == 0 && dir == "asc") {
                            dir = "desc";
                            switching = true;
                        }
                    }
                }
            }
        </script>
}