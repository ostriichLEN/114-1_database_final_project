@model IEnumerable<_114_1_database_final_project.Models.Character>

@{
    ViewData["Title"] = "樂手列表";
}

<h1>列表</h1>

<p>
    <a asp-action="Create" class="btn btn-success">建立新樂手</a>
</p>

<form asp-action="SearchByPosition" method="get" class="mb-4">
    <div class="input-group">
        <span class="input-group-text">🔍 依位置搜尋</span>
        <select name="position" class="form-select" style="max-width: 300px;">
            <option value="">-- 所有位置 --</option>
            <!option value="vocal" @(ViewData["CurrentFilter"] as string == "vocal" ? "selected" : "")>Vocal (主唱)</!option>
            <!option value="guitar" @(ViewData["CurrentFilter"] as string == "guitar" ? "selected" : "")>Guitar (吉他)</!option>
            <!option value="bass" @(ViewData["CurrentFilter"] as string == "bass" ? "selected" : "")>Bass (貝斯)</!option>
            <!option value="drum" @(ViewData["CurrentFilter"] as string == "drum" ? "selected" : "")>Drum (鼓手)</!option>
            <!option value="keyboard" @(ViewData["CurrentFilter"] as string == "keyboard" ? "selected" : "")>Keyboard (鍵盤)</!option>
            <!option value="DJ" @(ViewData["CurrentFilter"] as string == "DJ" ? "selected" : "")>DJ</!option>
        </select>
        <button type="submit" class="btn btn-primary">搜尋</button>
        <a asp-action="Index" class="btn btn-secondary">顯示全部</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>樂手編號</th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BandPosition)
            </th>
            <th>
                所屬樂團
            </th>
            <th>
                藝人
            </th>
            <th>管理功能</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CharacterId
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height) cm
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BandPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Band.BandName)
                </td>
                <td>
                    @item.VoiceActor?.FirstName @item.VoiceActor?.LastName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CharacterId" class="btn btn-sm btn-warning">修改</a>
                    <a asp-action="Details" asp-route-id="@item.CharacterId" class="btn btn-sm btn-info">詳細</a>
                    <a asp-action="Delete" asp-route-id="@item.CharacterId" class="btn btn-sm btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>