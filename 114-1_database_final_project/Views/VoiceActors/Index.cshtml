@model IEnumerable<_114_1_database_final_project.Models.VoiceActor>

@{
    ViewData["Title"] = "藝人列表";
}

<h1>藝人列表</h1>

<p>
    <a asp-action="Create" class="btn btn-success">新增藝人</a>
</p>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="搜尋姓名或國家..." value="@ViewData["CurrentFilter"]">
        <button type="submit" class="btn btn-primary">🔍 搜尋</button>
        <a asp-action="Index" class="btn btn-secondary">清空</a>
    </div>
</form>

<div class="card mb-4">
    <div class="card-body bg-light">
        <form asp-action="SearchByAge" method="get" class="row g-3 align-items-center" onsubmit="return checkAge()">
            <div class="col-auto">
                <label class="col-form-label">🔍 查詢年齡大於：</label>
            </div>
            <div class="col-auto">
                <input type="number" id="ageInput" name="age" class="form-control" placeholder="輸入歲數 (例如 20)" value="@ViewData["AgeFilter"]" min="0">  
                @* HTML5 會自動篩選數字 *@
            </div>
            <div class="col-auto">
                <span class="form-text">歲的藝人</span>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">查詢</button>
                <a asp-action="Index" class="btn btn-secondary">顯示全部</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th onclick="sortTable(0)" style="cursor: pointer; user-select: none;">
                編號 <span class="text-muted small">↕</span>
            </th>
            <th>
                名稱
            </th>
            <th>
                姓氏
            </th>
            <th onclick="sortTable(3)" style="cursor: pointer; user-select: none;">
                @Html.DisplayNameFor(model => model.BirthDate) <span class="text-muted small">↕</span>
            </th>
            <th onclick="sortTable(4)" style="cursor: pointer; user-select: none;">
                目前年齡 <span class="text-muted small">↕</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subsidiary)
            </th>
            <th>管理功能</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // 年齡計算邏輯
            int age = 0;
            if (item.BirthDate.HasValue)
            {
                var today = DateOnly.FromDateTime(DateTime.Now);
                age = today.Year - item.BirthDate.Value.Year;
                if (item.BirthDate.Value > today.AddYears(-age))
                {
                    age--;
                }
            }

            <tr>
                <td>
                    @item.VoiceActorId
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @(item.BirthDate.HasValue ? age + " 歲" : "未知")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subsidiary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VoiceActorId" class="btn btn-sm btn-warning">修改</a>
                    <a asp-action="Details" asp-route-id="@item.VoiceActorId" class="btn btn-sm btn-info">詳細</a>
                    <a asp-action="Delete" asp-route-id="@item.VoiceActorId" class="btn btn-sm btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
        <script>
            function sortTable(n) {
                var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
                table = document.getElementById("myTable");
                switching = true;
                // 預設排序方向為 "asc" (從小到大)
                dir = "asc"; 

                while (switching) {
                    switching = false;
                    rows = table.rows;

                    // 迴圈遍歷所有表格列 (除了第一列標題)
                    for (i = 1; i < (rows.length - 1); i++) {
                        shouldSwitch = false;

                        // 取得要比較的兩個元素
                        x = rows[i].getElementsByTagName("TD")[n];
                        y = rows[i + 1].getElementsByTagName("TD")[n];

                        // 取得文字內容並移除空白
                        var xContent = x.innerHTML.trim();
                        var yContent = y.innerHTML.trim();

                        // 判斷資料類型進行比較
                        var xValue, yValue;

                        // 如果是 "編號" (第0欄) 或 "年齡" (第4欄)，轉成數字比較
                        if (n === 0 || n === 4) {
                            // 使用 parseInt 解析數字 (年齡的 "25 歲" 會被解析成 25)
                            xValue = parseInt(xContent) || 0; 
                            yValue = parseInt(yContent) || 0;
                        } 
                        // 如果是 "生日" (第3欄)，轉成日期比較
                        else if (n === 3) {
                             xValue = new Date(xContent);
                             yValue = new Date(yContent);
                        }
                        // 其他當作字串比較
                        else {
                            xValue = xContent.toLowerCase();
                            yValue = yContent.toLowerCase();
                        }

                        // 根據方向進行比較
                        if (dir == "asc") {
                            if (xValue > yValue) {
                                shouldSwitch = true;
                                break;
                            }
                        } else if (dir == "desc") {
                            if (xValue < yValue) {
                                shouldSwitch = true;
                                break;
                            }
                        }
                    }

                    if (shouldSwitch) {
                        // 執行交換
                        rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                        switching = true;
                        switchcount ++; 
                    } else {
                        // 如果完成了一輪且沒有發生任何交換，且目前是 "asc"，則改為 "desc" 再跑一次
                        if (switchcount == 0 && dir == "asc") {
                            dir = "desc";
                            switching = true;
                        }
                    }
                }
            }
                function checkAge() {
               
                var ageInput = document.getElementById("ageInput").value;

               
                if (ageInput !== "" && parseInt(ageInput) < 0) {

                    
                    alert("❌ 年齡不能為負數！請重新輸入。");  // html5 沒報錯時才會進
                    return false;
                }

              
                return true;
            }
        </script>
}

